		Строка = Сред(Текст.Значение, НачальныйНомер);
	Иначе
		Строка = Сред(Текст.Значение, НачальныйНомер, ЧислоСимволов);
	КонецЕсли;
	Возврат НовыйТекст(Строка, Текст.Координаты[0].Верх, Текст.Координаты[0].Лево + НачальныйНомер - 1);
